import random

def number_guessing_game():
    print("====================================")
    print("ğŸ¯ Welcome to the Number Guessing Game!")
    print("====================================")
    print("I have picked a number between 1 and 100.")
    print("Try to guess it in as few attempts as possible!")
    print()

    # Generate a random number between 1 and 100
    secret_number = random.randint(1, 100)
    attempts = 0

    while True:
        try:
            guess = int(input("Enter your guess (1â€“100): "))
            attempts += 1

            # Validate range
            if guess < 1 or guess > 100:
                print("âŒ Please guess a number between 1 and 100 only.")
                continue

            # Check guess
            if guess < secret_number:
                print("ğŸ“‰ Too low! Try again.")
            elif guess > secret_number:
                print("ğŸ“ˆ Too high! Try again.")
            else:
                print("ğŸ‰ Congratulations! You guessed it right!")
                print(f"The number was {secret_number}.")
                print(f"You took {attempts} attempts to guess it.")
                break

        except ValueError:
            print("âš ï¸ Please enter a valid number (no letters or symbols).")

# Run the game
if __name__ == "__main__":
    number_guessing_game()
